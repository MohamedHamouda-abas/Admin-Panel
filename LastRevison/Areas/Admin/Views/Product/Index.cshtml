@model List<Product>
<div class="card-body pt-4">
    <div class="row pb-3">
        <div class="col-6"></div>
        <div class="col-6  text-end ">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create A new Product
            </a>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Images</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">ISBN</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr class="table-info">
                <td class="py-1">
                    <img src="@cat.ImageUrl" width="100px"  style="border:10px; border-radius:10px" alt="image">
                </td>
                <td scope="row">@cat.Title</td>
                <td scope="row">@cat.Author</td>
                <td scope="row">@cat.ISBN</td>
                <td scope="row">$@cat.Price</td>
                <td scope="row">@cat.Description</td>
                <td scope="row">@cat.Category.Name</td>
                <td scope="row">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-warning mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
